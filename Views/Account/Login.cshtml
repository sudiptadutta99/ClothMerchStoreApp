@{
    ViewBag.Title = "Login";
}

<div class="container mt-5" style="max-width: 450px;">
    <h2 class="text-center mb-4">Login</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "card p-4 shadow-sm" }))
    {
        <div class="form-group mb-3">
            @Html.Label("Email", new { @class = "form-label" })
            <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
        </div>

        <div class="form-group mb-3">
            @Html.Label("Password", new { @class = "form-label" })
            <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>

        @Html.Raw(string.IsNullOrEmpty(ViewBag.Message)
            ? ""
            : $"<div class='alert alert-danger mt-3'>{ViewBag.Message}</div>")

        <div class="text-center mt-3">
            <small>Don't have an account? <a href="@Url.Action("Register", "Account")">Register here</a></small>
        </div>
    }
</div>
