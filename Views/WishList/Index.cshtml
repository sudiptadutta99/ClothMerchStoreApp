@model IEnumerable<ClothMerchStoreApp.Models.WishList>

@{
    ViewBag.Title = "My Wishlist";
}

<h2 class="mt-4 mb-4 text-center">My Wishlist</h2>

@if (!Model.Any())
{
    <p class="text-center text-muted">Your wishlist is empty.</p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="@item.Product.ImageURL" class="card-img-top" style="height: 220px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Product.Name</h5>
                            <p class="card-text">@item.Product.Description</p>
                            <p class="fw-bold text-dark">₹@item.Product.Price</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <a href="@Url.Action("Remove", "Wishlist", new { id = item.WishID })" class="btn btn-sm btn-outline-danger">
                                ❌ Remove
                            </a>
                            <a href="@Url.Action("MoveToCart", "Wishlist", new { productId = item.ProductID })" class="btn btn-sm btn-warning">
                                🛒 Move to Cart
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
