@model ClothMerchStoreApp.Models.Order
@model IEnumerable<ClothMerchStoreApp.Models.Order>

<h2>My Orders</h2>

<table class="table">
    <tr>
        <th>Order Date</th>
        <th>Total</th>
        <th>Status</th>
    </tr>

    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
            <td>₹@order.TotalAmount</td>
            <td>@order.Status</td>
        </tr>
    }
</table>


